<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activities.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="#2196F3"
        android:padding="0dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/idImvInfo"
            android:layout_width="@dimen/imageView_smallCircle_width"
            android:layout_height="@dimen/imageView_smallCircle_height"
            android:layout_marginLeft="@dimen/imageView_smallCircle_marginLeft"
            android:layout_marginTop="@dimen/imageView_smallCircle_marginTop"
            android:layout_marginRight="@dimen/imageView_smallCircle_marginRight"
            android:layout_marginBottom="@dimen/imageView_smallCircle_marginBottom"
            android:paddingLeft="@dimen/imageView_smallCircle_paddingLeft"
            android:paddingTop="@dimen/imageView_smallCircle_paddingTop"
            android:paddingRight="@dimen/imageView_smallCircle_paddingRight"
            android:paddingBottom="@dimen/imageView_smallCircle_paddingBottom"
            android:src="@drawable/ic_info_black_24dp"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/idTextViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/textView_marginLeft"
            android:layout_marginTop="@dimen/textView_marginTop"
            android:layout_marginRight="@dimen/textView_marginRight"
            android:layout_marginBottom="@dimen/textView_marginBottom"
            android:layout_toRightOf="@+id/idImvInfo"
            android:layout_weight="1"
            android:paddingLeft="@dimen/textView_paddingLeft"
            android:paddingTop="@dimen/textView_paddingTop"
            android:paddingRight="@dimen/textView_paddingRight"
            android:paddingBottom="@dimen/textView_paddingBottom"
            android:text="@string/text_welcomeUser"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/idImvProfile"
            android:layout_width="@dimen/imageView_smallCircle_width"
            android:layout_height="@dimen/imageView_smallCircle_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/imageView_smallCircle_marginLeft"
            android:layout_marginTop="@dimen/imageView_smallCircle_marginTop"
            android:layout_marginRight="@dimen/imageView_smallCircle_marginRight"
            android:layout_marginBottom="@dimen/imageView_smallCircle_marginBottom"
            android:paddingLeft="@dimen/imageView_smallCircle_paddingLeft"
            android:paddingTop="@dimen/imageView_smallCircle_paddingTop"
            android:paddingRight="@dimen/imageView_smallCircle_paddingRight"
            android:paddingBottom="@dimen/imageView_smallCircle_paddingBottom"
            android:src="@drawable/ic_info_black_24dp"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp" />


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/idTviewScoreCard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardView_marginLeft"
        android:layout_marginTop="@dimen/cardView_marginTop"
        android:layout_marginRight="@dimen/cardView_marginRight"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/idTvSumResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Summarized Scorecard"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTvResultSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvSumResult"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/idTvResultSummary2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvSumResult"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/idCdTestInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardView_marginLeft"
            android:layout_marginTop="3dp"
            android:layout_marginRight="@dimen/cardView_marginRight"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTvTestId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_marginLeft"
                    android:layout_marginTop="@dimen/textView_marginTop"
                    android:layout_marginRight="@dimen/textView_marginRight"
                    android:layout_marginBottom="@dimen/textView_marginBottom"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/textView_paddingLeft"
                    android:paddingTop="@dimen/textView_paddingTop"
                    android:paddingRight="@dimen/textView_paddingRight"
                    android:paddingBottom="@dimen/textView_paddingBottom"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idTvTestSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTvTestId"
                    android:layout_marginLeft="@dimen/textView_marginLeft"
                    android:layout_marginTop="@dimen/textView_marginTop"
                    android:layout_marginRight="@dimen/textView_marginRight"
                    android:layout_marginBottom="@dimen/textView_marginBottom"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/textView_paddingLeft"
                    android:paddingTop="@dimen/textView_paddingTop"
                    android:paddingRight="@dimen/textView_paddingRight"
                    android:paddingBottom="@dimen/textView_paddingBottom"
                    android:text="Quantitative Aptitude"
                    android:textAlignment="center"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/idTvTestTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTvTestSubject"
                    android:layout_marginLeft="@dimen/textView_marginLeft"
                    android:layout_marginTop="@dimen/textView_marginTop"
                    android:layout_marginRight="@dimen/textView_marginRight"
                    android:layout_marginBottom="@dimen/textView_marginBottom"
                    android:paddingLeft="@dimen/textView_paddingLeft"
                    android:paddingTop="@dimen/textView_paddingTop"
                    android:paddingRight="@dimen/textView_paddingRight"
                    android:paddingBottom="@dimen/textView_paddingBottom"
                    android:text="Time : 3 Minutes"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/idTvFullMarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTvTestSubject"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/textView_marginLeft"
                    android:layout_marginTop="@dimen/textView_marginTop"
                    android:layout_marginRight="@dimen/textView_marginRight"
                    android:layout_marginBottom="@dimen/textView_marginBottom"
                    android:paddingLeft="@dimen/textView_paddingLeft"
                    android:paddingTop="@dimen/textView_paddingTop"
                    android:paddingRight="@dimen/textView_paddingRight"
                    android:paddingBottom="@dimen/textView_paddingBottom"
                    android:text="Full Marks : 12"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/idCdVControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardView_marginLeft"
            android:layout_marginTop="3dp"
            android:layout_marginRight="@dimen/cardView_marginRight"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/idPbTestProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/progressBar_marginLeft"
                    android:layout_marginTop="@dimen/progressBar_marginTop"
                    android:layout_marginRight="@dimen/progressBar_marginRight"
                    android:layout_marginBottom="@dimen/progressBar_marginBottom"
                    android:layout_weight="1"
                    android:min="0"
                    android:paddingLeft="@dimen/progressBar_paddingLeft"
                    android:paddingTop="@dimen/progressBar_paddingTop"
                    android:paddingRight="@dimen/progressBar_paddingRight"
                    android:paddingBottom="@dimen/progressBar_paddingBottom"
                    android:progress="54"
                    android:progressTint="#FF5722" />

                <TextView
                    android:id="@+id/idTvcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_marginLeft"
                    android:layout_marginTop="@dimen/textView_marginTop"
                    android:layout_marginRight="@dimen/textView_marginRight"
                    android:layout_marginBottom="@dimen/textView_marginBottom"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingLeft="@dimen/textView_paddingLeft"
                    android:paddingTop="@dimen/textView_paddingTop"
                    android:paddingRight="@dimen/textView_paddingRight"
                    android:paddingBottom="@dimen/textView_paddingBottom"
                    android:text="34 Out of 129"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/idCdVCandidateRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardView_marginLeft"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/cardView_marginRight"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/idCandidateResLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/idTvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/idRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/idRbOpt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/radioButton_marginLeft"
                        android:layout_marginRight="@dimen/radioButton_marginRight"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/idRbOpt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/radioButton_marginLeft"
                        android:layout_marginTop="@dimen/radioButton_marginTop"
                        android:layout_marginRight="@dimen/radioButton_marginRight"
                        android:layout_marginBottom="@dimen/radioButton_marginBottom"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/idRbOpt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/radioButton_marginLeft"
                        android:layout_marginTop="@dimen/radioButton_marginTop"
                        android:layout_marginRight="@dimen/radioButton_marginRight"
                        android:layout_marginBottom="@dimen/radioButton_marginBottom"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/idRbOpt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/radioButton_marginLeft"
                        android:layout_marginTop="@dimen/radioButton_marginTop"
                        android:layout_marginRight="@dimen/radioButton_marginRight"
                        android:layout_marginBottom="@dimen/radioButton_marginBottom"
                        android:textStyle="bold" />

                </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnActionPrev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/rounded_button"
                        android:text="Previous"
                        android:textColor="@color/btn_text_color"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/id_TvtestQs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"

                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnActionNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/rounded_button"
                        android:text="Next"
                        android:textColor="@color/btn_text_color"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSubmitTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/btn_marginLeft"
            android:layout_marginTop="@dimen/btn_marginTop"
            android:layout_marginRight="@dimen/btn_marginRight"
            android:layout_marginBottom="@dimen/btn_marginBottom"
            android:background="@drawable/rounded_button"
            android:paddingLeft="@dimen/btn_paddingLeft"
            android:paddingTop="@dimen/btn_paddingTop"
            android:paddingRight="@dimen/btn_marginRight"
            android:paddingBottom="@dimen/btn_paddingBottom"
            android:text="@string/text_btn_submitTest"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/idCdVScoreCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cardView_marginLeft"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/cardView_marginRight"
            android:layout_marginBottom="@dimen/cardView_marginBottom"
            android:visibility="gone"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/idTviewScoreCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_cTmarginTop"
                    android:layout_marginBottom="@dimen/textView_cTmarginBottom"
                    android:gravity="center_horizontal"
                    android:text="Detailed Result"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idTviewTestId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idTviewScoreCard"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idTviewTestDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTviewScoreCard"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Held On : 04/04/2020"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/idLabelTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTviewTestDate"
                    android:layout_marginTop="15dp"
                    android:stretchColumns="*"
                    android:visibility="gone">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#009688"
                        android:paddingLeft="1dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S.No"
                            android:textColor="@color/color_tableLabel"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YR"
                            android:textColor="@color/color_tableLabel"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CR"
                            android:textColor="@color/color_tableLabel"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/color_tableLabel"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textColor="@color/color_tableLabel"
                            android:textStyle="bold" />


                    </TableRow>
                </TableLayout>

                <ScrollView
                    android:id="@+id/idScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idLabelTable">

                    <TableLayout
                        android:id="@+id/idTableResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:stretchColumns="*">

                    </TableLayout>
                </ScrollView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
