<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_bckg_color"
    tools:context=".fragments.CognifyGamesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/id_cview1"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal|center_vertical">


                    <TextView
                        android:id="@+id/id_TviewNum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tview_marginLeft_cog1"
                        android:layout_marginTop="@dimen/tview_marginTop_cog1"
                        android:layout_marginRight="@dimen/tview_marginRight_cog1"
                        android:layout_marginBottom="@dimen/tview_marginBottom_cog1"
                        android:background="@drawable/shape_hexagon"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="20dp"
                        android:text="268"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_TviewSign0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/tview_marginLeft_cog2"
                        android:layout_marginTop="@dimen/tview_marginTop_cog2"
                        android:layout_marginRight="@dimen/tview_marginRight_cog2"
                        android:layout_marginBottom="@dimen/tview_marginBottom_cog2"
                        android:layout_toRightOf="@id/id_TviewNum1"
                        android:background="@drawable/solid_circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold" />




                    <TextView
                        android:id="@+id/id_TviewNum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="@dimen/tview_marginLeft_cog2"
                        android:layout_marginTop="@dimen/tview_marginTop_cog2"
                        android:layout_marginRight="@dimen/tview_marginRight_cog2"
                        android:layout_marginBottom="@dimen/tview_marginBottom_cog2"
                        android:layout_toRightOf="@+id/id_TviewSign0"
                        android:background="@drawable/heart"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="256"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/id_cview2"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:id="@+id/id_TviewNum3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tview_marginLeft_cog1"
                        android:layout_marginTop="@dimen/tview_marginTop_cog1"
                        android:layout_marginRight="@dimen/tview_marginRight_cog1"
                        android:layout_marginBottom="@dimen/tview_marginBottom_cog1"
                        android:background="@drawable/heart"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="20dp"
                        android:text="245"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/id_TviewSign"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/tview_marginLeft_cog2"
                        android:layout_marginTop="@dimen/tview_marginTop_cog2"
                        android:layout_marginRight="@dimen/tview_marginRight_cog2"
                        android:layout_marginBottom="@dimen/tview_marginBottom_cog2"
                        android:layout_toRightOf="@id/id_TviewNum3"
                        android:background="@drawable/solid_circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/id_TviewNum4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="@dimen/tview_marginLeft_cog2"
                        android:layout_marginTop="@dimen/tview_marginTop_cog2"
                        android:layout_marginRight="@dimen/tview_marginRight_cog2"
                        android:layout_marginBottom="@dimen/tview_marginBottom_cog2"
                        android:layout_toRightOf="@id/id_TviewSign"
                        android:background="@drawable/shape_hexagon"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="243"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/id_fabLessThan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:tint="#ffff" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/id_fabEqualTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_drag_handle_black_24dp"
                android:tint="#ffff" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/id_fabGreaterThan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:tint="#ffff" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>